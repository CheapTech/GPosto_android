<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.senacrs.gposto.GUI.Destaques_Activity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="DESTAQUES DO DIA"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:typeface="normal"
        app:fontFamily="monospace" />

    <ListView
        android:id="@+id/listPostoDestaque"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="35dp"/>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="7dp"
        android:orientation="vertical">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/btnHistorico"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:onClick="historico"
                android:text="Histórico" />

            <Button
                android:id="@+id/btnListPosto"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:onClick="listarPostos"
                android:text="Listar Postos" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="111dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:onClick="sair"
                android:text="Sair" />

            <Button
                android:id="@+id/btnConfig"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:onClick="configuracoes"
                android:text="Configurações" />
        </TableRow>

    </TableLayout>

</LinearLayout>